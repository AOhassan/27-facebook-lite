<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/facebookwhite">

    <ImageView
        android:id="@+id/network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/network"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/alex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView

            android:layout_weight="1"
            android:text="Jerry"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
        <Button
            android:text="More"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fehed"
        app:layout_constraintBottom_toTopOf="@id/alex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Blessed"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
        <Button
            android:text="More"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/artem"
        app:layout_constraintBottom_toTopOf="@id/fehed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Artem"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
        <Button
            android:text="More"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/abdul"
        app:layout_constraintBottom_toTopOf="@id/artem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Jewels"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
        <Button
            android:text="More"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/q"
        app:layout_constraintBottom_toTopOf="@id/abdul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Q"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
        <Button
            android:text="More"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/q">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>